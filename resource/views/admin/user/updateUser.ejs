<link rel="stylesheet" href="/admin/css/add-product.css">

<div class="content-main">
    <%- include('./../../layouts/suc-msg') -%>
    <div class=" m-4  p-2 main-content">
        <div class="d-flex justify-content-center p-2 title">ویرایش پروفایل</div>
       
        <form class="container" action="/admin/user/update" method="POST" enctype="multipart/form-data" novalidate>
            <div class="images d-flex p-3 justify-content-around">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <% if(!user.image){ %>
                            <div class="flip-card-front">
                                <img id="imagePreview" src="/admin/images/upload.png" alt="Avatar"
                                    style="width:100%;height:100%;">
                            </div>
                            <% }else{ %>
                                <div class="flip-card-front">
                                    <img id="imagePreview" src="<%- user.image %>" alt="<%- user.name %>"
                                        style="width:100%;height:100%;">
                                </div>
                                <% } %>
                                    <div
                                        class="flip-card-back d-flex flex-column justify-content-center align-items-center">
                                        <div class="new_Btn"><i class="fas fa-cloud-upload-alt "></i></div>
                                        <input type="file" name="image" id="imageInput"
                                            onchange="previewImage(event)" accept="image/*">
                                        تصویر پروفایل
                                        <p>اندازه تصاویر باید 300 در 300 پیکسل باشد</p>
                                    </div>
                    </div>
                </div>
            </div>
            <div class="p-2 inf">
                <div class="d-flex justify-content-around align-items-center my-auto p-2 field">
                    <div class="col-4 field-col">
                        <label for="name" class="d-block">نام و نام خانوادگی :</label>
                        <input class="w-75 inputs" name="name" type="text"
                            placeholder="نام و نام خانوادگی خود را وارد کنید" value="<%- user.name %>">
                    </div>
                    <div class="col-4 field-col">
                        <label for="email" class="d-block">ایمیل :</label>
                        <input class="w-75 inputs" name="email" type="email" placeholder="ایمیل خود را وارد کنید"
                            value="<%- user.email %>">
                    </div>
                    <div class="col-4 field-col">
                        <label for="mobileNumber" class="d-block">شماره موبایل :</label>
                        <input class="w-75 inputs" name="mobileNumber" type="number"
                            placeholder="شماره موبایل خود را وارد کنید" value="<%- user.mobileNumber %>">
                    </div>
                </div>
                <div class="d-flex justify-content-start p-2">
                    <button class="btn submit-btn" type="submit">ذخیره</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="/admin/js/imagePreview.js"></script>
<script src="/admin/js/imageInput.js"></script>