



<section class="main flex-column">
    <div class="d-flex flex-column section2 p-3">
        <div class="w-100 title-section d-flex flex-row-reverse justify-content-between align-items-center">
            <span>تیکت های من</span>
            <a href="/mytickets-send">
                <button class="btn buttonformsabt mt-0 mb-0">ثبت تیکت جدید</button>
            </a>
        </div>
        <% if(tickets.length> 0){ %>
            <div class="w-100">
                <p class=" title-tickets">
                    برای مشاهده تیکت روی "موضوع تیکت" کلیک کنید
                </p>
                <table class="custom-table container">
                    <thead>
                        <tr>
                            <th>وضعیت تیکت</th>
                            <th>موضوع تیکت</th>
                            <th>شماره تیکت</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tickets.forEach(ticket=> { %>
                            <% if(ticket.title !=='Client' ){ %>
                                <tr>
                                    <% if(ticket.check){ %>
                                        <td class="text-success">
                                            تیکت باز است
                                        </td>
                                        <% }else{ %>
                                            <td class="text-danger">
                                                تیکت بسته شد
                                            </td>
                                            <% } %>

                                                <td>
                                                    <a href="/mytickets-view/<%- ticket.id %>"><%-ticket.title
                                                            %></a>
                                                </td>
                                                <td><%- ticket.code %></td>
                                </tr>
                                <% } %>
                                    <% }) %>
                    </tbody>
                </table>
            </div>
            <% }else{ %>
                <div class="d-flex flex-column m-auto fadeing">
                    <img class="img-fluid" src="/image/objects/empty-notification.svg " alt="">
                    <p>درحال حاضر تیکتی ندارید</p>
                </div>
                <% } %>
    </div>
</section>

<script src="/js/toggleMenu.js"></script>